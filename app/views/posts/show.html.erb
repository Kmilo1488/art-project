post<table class="table">
  <thead>
    <tr>
      <th scope="col">image</th>
      <th scope="col">Title</th>
      <th scope="col">Text</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag("#{@post.image}") %></td>
      <td><%= @post.title %></td>
      <td><%= @post.text %></td>
    </tr>
  </tbody>
</table>

<% if current_user_admin? || current_user_owner? %>
  <div>
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" %>
    <%= link_to "Delete", @post, class: "btn btn-danger", method: :delete, data: { confirm: "Are you shure?" } %>
  </div>
<% end %>


<%= link_to "Back", posts_path, class: "btn btn-secondary" %>
