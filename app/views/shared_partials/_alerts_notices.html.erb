<div>
  <% if notice %>
    <p class="alert alert-success">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= notice %>
    </p>
  <% elsif alert %>
    <p class="alert alert-danger">
      <%= alert %>
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </p>
  <% end %>
</div>
